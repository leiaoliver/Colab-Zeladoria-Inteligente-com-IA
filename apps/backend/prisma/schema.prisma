generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Report {
  id               String   @id @default(uuid())
  title            String
  description      String
  location         String?
  status           String   @default("OPEN")
  
  // Campos processados pela IA
  category         String?
  priority         String?
  technicalSummary String?
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}